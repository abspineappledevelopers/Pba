@model UCL.ISM.Client.Models.InterviewSchemeVM
@{
    ViewData["Title"] = "CreateQuestionToInterview";
}

<h2>Tilføj Spørgsmål</h2>

<div class="container-fluid">
    <form asp-action="Pass_InterviewScheme_Question" asp-controller="Administration" method="post">
        <div class="row">
            <div class="col-xs-4">
                @Html.HiddenFor(x => x.Id)
                <input asp-for="Name" type="text" hidden />
                <input asp-for="Comment" type="text" hidden />
                <label class="control-label">Skema navn:</label>
                <input asp-for="Name" type="text" disabled class="form-control" id="name" />
            </div>
            <div class="col-xs-4">
                <label class="control-label">Skema Kommentar:</label>
                <input asp-for="Comment" type="text" disabled class="form-control" id="comment" />
            </div>
            <div class="col-xs-4">
                <div class="form-group">
                    <label class="control-label">Lande skema gælder for:</label>
                    <select multiple="multiple" asp-for="CountryId" asp-items="@Model.Countries" class="form-control multi-select" id="countries"></select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <label class="control-label">Tilføj spørgsmål:</label>
                <input asp-for="Question.Quest" type="text" class="form-control" id="name" />
            </div>
        </div>

        <button type="submit" class="btn btn-success">Gem</button>

        @*Lav til partial*@
        @if (Model.Questions.Count != 0)
        {
            <h3>Registreret spørgsmål</h3>
            for (int i = 0; i < Model.Questions.Count; i++)
            {
                <div class="row">
                    <div class="col-xs-12">
                        <div class="col-xs-4">
                            <input asp-for="Questions[i].Quest" type="text" disabled class="form-control" id="name" />
                        </div>
                    </div>
                </div>
            }
        }

    </form>
</div>

