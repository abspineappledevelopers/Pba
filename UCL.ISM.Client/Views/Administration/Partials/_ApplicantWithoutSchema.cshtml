@model UCL.ISM.Client.Models.ApplicantVM
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="row">
    <div class="col-xs-2">
        <input asp-for="Id" type="hidden" />
        <input asp-for="Firstname" type="text" class="form-control" />
    </div>
    <div class="col-xs-2">
        <input asp-for="Lastname" type="text" class="form-control" />
    </div>
    <div class="col-xs-2">
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    <div class="col-xs-2">
        <div class="row">
            <div class="col-xs-8">
                <input asp-for="Age" type="number" class="form-control" />
            </div>
            <div class="col-xs-4">
                <input asp-for="IsEU" type="checkbox" class="form-control" />
            </div>
        </div>
    </div>
    <div class="col-xs-2">
        <select asp-for="Priority" id="priority" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
        </select>
    </div>
    <div class="col-xs-2">
        <select asp-for="Nationality.Id" asp-items="@Model.Nationalities" class="form-control" required id="nationality"></select>
    </div>
</div>

<div class="row">
    <div class="col-xs-4">
        <select asp-for="StudyField.Id" asp-items="@Model.StudyFields" class="form-control" required id="studyfield"></select>
    </div>
    <div class="col-xs-4">
        <select asp-for="Interviewer.Id" asp-items="@Model.Interviewers" class="form-control" required id="interview"></select>
    </div>
    <div class="col-xs-2">

    </div>
    <div class="col-xs-2">

    </div>
</div>
