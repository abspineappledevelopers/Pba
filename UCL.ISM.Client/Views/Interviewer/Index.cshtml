@model List<ApplicantVM>
@{
    ViewData["Title"] = "Interview";
}

<div style="padding: 10px 7px 40px 7px; background-image: linear-gradient(to bottom, #cbe5e4, #edf9fc);">
    <div class="text-center" style="margin-top: 40px; padding: 10px 7px 10px 7px">
        <h2 style="color: #014550">Velkommen</h2>
    </div>
    <div class="row" id="applicants" style="margin-top: 30px;">
        @if (Model.Count != 0)
        {
            @for (int i = 0; i < Model.Count(); i++)
            {
                <div class="col-sm-6 col-lg-4 d-flex">
                    <partial name="../Interviewer/Partials/_Applicants" model="@Model[i]" />
                </div>
            }
        }
        else
        {
            <p>Du har ingen nye ansøgere, der mangler at få taget interview.</p>
        }
    </div>
</div>
